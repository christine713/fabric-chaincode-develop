

export PATH=${PWD}/../bin/linux-amd64:$PATH
export FABRIC_CFG_PATH=$PWD/config/

#產生orderer憑證
cryptogen generate --config=./config/crypto-config-orderer.yaml --output=./crypto-config

#產生peer憑證
cryptogen generate --config=./config/crypto-config-org1.yaml --output=./crypto-config

#產生創世區塊
configtxgen -configPath ./config -profile OrderersGenesis -channelID system-channel -outputBlock ./system-genesis-block/genesis.block

#order docker compose up

#產生create application channel文件
configtxgen -configPath ./config -profile OrgsChannel -outputCreateChannelTx ./channel-artifacts/cathay.tx -channelID cathay

#產生update anchor peer文件
configtxgen -configPath ./config -profile OrgsChannel -outputAnchorPeersUpdate ./channel-artifacts/org1Anchors.tx -channelID cathay -asOrg Org1MSP
configtxgen -configPath ./config -profile OrgsChannel -outputAnchorPeersUpdate ./channel-artifacts/org2Anchors.tx -channelID cathay -asOrg Org2MSP
configtxgen -configPath ./config -profile OrgsChannel -outputAnchorPeersUpdate ./channel-artifacts/org3Anchors.tx -channelID cathay -asOrg Org3MSP

#peer docker compose up

#進入docker container
docker exec -it peer1.org1.cathaybc.com sh
docker exec -it peer1.org2.cathaybc.com sh
docker exec -it peer1.org3.cathaybc.com sh

#設定使用admin憑證
export CORE_PEER_MSPCONFIGPATH=/etc/hyperledger/fabric/crypto-config/peerOrganizations/org1.cathaybc.com/users/Admin@org1.cathaybc.com/msp/
export CORE_PEER_MSPCONFIGPATH=/etc/hyperledger/fabric/crypto-config/peerOrganizations/org2.cathaybc.com/users/Admin@org2.cathaybc.com/msp/
export CORE_PEER_MSPCONFIGPATH=/etc/hyperledger/fabric/crypto-config/peerOrganizations/org3.cathaybc.com/users/Admin@org3.cathaybc.com/msp/

#建立channel
peer channel create -o orderer1.cathaybc.com:7050 -c cathay -f ./channel-artifacts/cathay.tx --outputBlock ./channel-artifacts/cathay.block --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt

#加入channel
peer channel join -b ./channel-artifacts/cathay.block

#更新anchor peer
peer channel update -o orderer1.cathaybc.com:7050 -c cathay -f ./channel-artifacts/org1Anchors.tx --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt
peer channel update -o orderer1.cathaybc.com:7050 -c cathay -f ./channel-artifacts/org2Anchors.tx --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt
peer channel update -o orderer1.cathaybc.com:7050 -c cathay -f ./channel-artifacts/org3Anchors.tx --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt


#################################### Chaincode 相關 ####################################

#打包
peer lifecycle chaincode package smartcontract.tar.gz --path /finalexam-chaincode/smartcontract --lang golang --label smartcontract_2

export CORE_PEER_MSPCONFIGPATH=/etc/hyperledger/fabric/crypto-config/peerOrganizations/org1.cathaybc.com/users/Admin@org1.cathaybc.com/msp/

#安裝
peer lifecycle chaincode install smartcontract.tar.gz 

#查看安裝
peer lifecycle chaincode queryinstalled

#批准
org1
peer lifecycle chaincode approveformyorg -o orderer1.cathaybc.com:7050 --channelID cathay --name smartcontract --version 3 --sequence 3 --init-required --package-id [Package ID: smartcontract_3:d63593e6fe6fb1db01595d7b19428ebd4592bbff481af1ff2f952d44a117a96a] --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt

org2
peer lifecycle chaincode approveformyorg -o orderer1.cathaybc.com:7050 --channelID cathay --name smartcontract --version 1 --init-required --package-id [smartcontract_1:dc6c1b3cb91ff1a8351b71545f8603ef6ea70ea62b4306b8d4b8ad59c90e9cbd] 

org3
peer lifecycle chaincode approveformyorg -o orderer1.cathaybc.com:7050 --channelID cathay --name smartcontract --version 1 --init-required --package-id [smartcontract_1:dc6c1b3cb91ff1a8351b71545f8603ef6ea70ea62b4306b8d4b8ad59c90e9cbd] 

#查看批准狀態
peer lifecycle chaincode checkcommitreadiness --channelID cathay --name smartcontract --version 3 --sequence 2 --output json --init-required

#提交
peer lifecycle chaincode commit -o orderer1.cathaybc.com:7050 --channelID cathay --name smartcontract --version 1 --sequence 1 --init-required --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt --peerAddresses peer1.org1.cathaybc.com:7051 --peerAddresses peer1.org2.cathaybc.com:7061 --peerAddresses peer1.org3.cathaybc.com:7071
peer lifecycle chaincode commit -o orderer1.cathaybc.com:7050 --channelID cathay --name smartcontract --version 3 --sequence 3 --init-required --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt --peerAddresses peer1.org2.cathaybc.com:7051 --tlsRootCertFiles ./crypto-config/peerOrganizations/org2.cathaybc.com/peers/peer1.org2.cathaybc.com/tls/ca.crt --peerAddresses peer1.org3.cathaybc.com:7051 --tlsRootCertFiles ./crypto-config/peerOrganizations/org3.cathaybc.com/peers/peer1.org3.cathaybc.com/tls/ca.crt


#查看提交

peer lifecycle chaincode querycommitted --channelID cathay --name smartcontract



#初始化
peer chaincode invoke -o orderer1.cathaybc.com:7050 -C cathay -n smartcontract --isInit -c '{"function":"InitLedger","Args":[]}' --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt

#Query example
peer chaincode query -o orderer1.cathaybc.com:7050 -C cathay -n smartcontract -c '{"function":"QueryFunction1","Args":[]}' --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt
peer chaincode query -o orderer1.cathaybc.com:7050 -C cathay -n smartcontract -c '{"function":"CreateUser","Args":[]}' --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt

#Invoke example
peer chaincode invoke -o orderer1.cathaybc.com:7050 -C cathay -n smartcontract -c '{"function":"InvokeFunction1","Args":[]}' --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt
peer chaincode invoke -o orderer1.cathaybc.com:7050 -C cathay -n smartcontract -c '{"function":"CreateUser","Args":[]}' --tls --cafile ./crypto-config/ordererOrganizations/cathaybc.com/orderers/orderer1.cathaybc.com/tls/ca.crt